<?xml version="1.0" encoding="UTF-8"?>
<persistence xmlns="http://java.sun.com/xml/ns/persistence" version="2.0">

    <persistence-unit name="AgenciaPersistenceUnit" transaction-type="RESOURCE_LOCAL">
        <provider>org.hibernate.ejb.HibernatePersistence</provider>
        <class>com.agencia.modelos.Agencia</class>
        <class>com.agencia.modelos.Empleado</class>
        <class>com.agencia.modelos.Hotel</class>
        <class>com.agencia.modelos.Pasajero</class>
        <class>com.agencia.modelos.Reservacion</class>
        <class>com.agencia.modelos.Vuelo</class>
        <properties>
            <property name="javax.persistence.jdbc.url" value="jdbc:postgresql://localhost:5432/agencia"/>
            <property name="javax.persistence.jdbc.driver" value="org.postgresql.Driver"/>
            <property name="javax.persistence.jdbc.user" value="postgres"/>
            <property name="javax.persistence.jdbc.password" value="root"/>
        </properties>
    </persistence-unit>
</persistence>
